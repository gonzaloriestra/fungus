{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "noImplicitReturns": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "package*.json",
    "project*.json",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
