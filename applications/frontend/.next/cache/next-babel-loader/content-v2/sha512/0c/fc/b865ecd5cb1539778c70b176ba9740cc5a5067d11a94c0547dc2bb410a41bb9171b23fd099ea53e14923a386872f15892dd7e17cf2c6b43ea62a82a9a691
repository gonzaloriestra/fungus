{"ast":null,"code":"import { jsxs as _jsxs } from \"react/jsx-runtime\";\nimport { jsx as _jsx } from \"react/jsx-runtime\";\nimport React, { useEffect, useState } from 'react';\nimport { Button, Form, Modal } from 'semantic-ui-react';\nimport { useRouter } from 'next/router';\nimport addLocation from '../../queries/addLocation';\nimport Map from '../Map';\n\nconst NewLocationModal = ({\n  show,\n  onSave\n}) => {\n  const {\n    0: name,\n    1: setName\n  } = useState('');\n  const {\n    0: zone,\n    1: setZone\n  } = useState([]);\n  const {\n    0: open,\n    1: setOpen\n  } = useState(show);\n  const router = useRouter();\n  useEffect(() => {\n    setOpen(show);\n  }, [show]);\n\n  const closeModal = () => {\n    setOpen(false);\n    router.push('/locations');\n  };\n\n  const handleOnClose = () => {\n    closeModal();\n  };\n\n  const handleOnOpen = () => {\n    setOpen(true);\n  };\n\n  const handleOnSave = async () => {\n    await addLocation({\n      name,\n      zone\n    });\n    closeModal();\n    onSave();\n  };\n\n  return /*#__PURE__*/_jsxs(Modal, {\n    onClose: handleOnClose,\n    onOpen: handleOnOpen,\n    open: open,\n    children: [/*#__PURE__*/_jsx(Modal.Header, {\n      children: \"Nueva zona\"\n    }), /*#__PURE__*/_jsx(Modal.Content, {\n      children: /*#__PURE__*/_jsx(Modal.Description, {\n        children: /*#__PURE__*/_jsxs(Form, {\n          children: [/*#__PURE__*/_jsx(Form.Field, {\n            children: /*#__PURE__*/_jsx(\"div\", {\n              style: {\n                height: '500px'\n              },\n              children: /*#__PURE__*/_jsx(Map, {\n                mode: \"edit\",\n                initialZoom: 6,\n                onLocationCreated: zone => setZone(zone)\n              })\n            })\n          }), /*#__PURE__*/_jsxs(Form.Field, {\n            children: [/*#__PURE__*/_jsx(\"label\", {\n              children: \"\\xBFQu\\xE9 nombre quieres darle?\"\n            }), /*#__PURE__*/_jsx(\"input\", {\n              placeholder: \"Escribe un nombre\",\n              onChange: e => setName(e.target.value)\n            })]\n          })]\n        })\n      })\n    }), /*#__PURE__*/_jsxs(Modal.Actions, {\n      children: [/*#__PURE__*/_jsx(Button, {\n        color: \"black\",\n        onClick: handleOnClose,\n        children: \"Cancelar\"\n      }), /*#__PURE__*/_jsx(Button, {\n        positive: true,\n        onClick: handleOnSave,\n        children: \"Guardar\"\n      })]\n    })]\n  });\n};\n\nexport default NewLocationModal;","map":null,"metadata":{},"sourceType":"module"}