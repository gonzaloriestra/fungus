{
  "name": "fungus",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "license": "",
  "repository": {
    "url": "https://github.com/ssanchezmarc/fungus"
  },
  "engines": {
    "node": ">=10.15.0",
    "yarn": ">=1.21.0"
  },
  "scripts": {
    "start:dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules --watch 'src/**/*.ts' --inspect=0.0.0.0:9269 applications/backend/server.ts",
    "start": "NODE_ENV=production node dist/src/applications/fungus/backend/server",
    "test": "yarn run test:unit && yarn run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:unit:watch": "NODE_ENV=test jest --watch",
    "test:features": "NODE_ENV=test cucumber-js -p default -b",
    "build": "yarn run build:clean && yarn run build:tsc && yarn run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy src/applications/**/*.{json,yaml} dist/src/applications",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "copy": "^0.3.2",
    "glob": "^7.1.6",
    "hapi": "^18.1.0",
    "http-status": "^1.4.2",
    "lodash": "^4.17.15",
    "node-dependency-injection": "^2.6.3",
    "ts-node": "^8.9.1",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@types/cucumber": "^6.0.1",
    "@types/faker": "^4.1.11",
    "@types/glob": "^7.1.1",
    "@types/hapi": "^18.0.3",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^14.10.1",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "cucumber": "^6.0.5",
    "cucumber-pretty": "^6.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "faker": "^4.1.0",
    "jest": "^25.1.0",
    "prettier": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node-dev": "^1.0.0-pre.62",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  }
}
