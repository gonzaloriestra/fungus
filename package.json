{
  "name": "fungus",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "license": "",
  "repository": {
    "url": "https://github.com/ssanchezmarc/fungus"
  },
  "engines": {
    "node": ">=10.15.0",
    "yarn": ">=1.21.0"
  },
  "scripts": {
    "start:dev:frontend": "NODE_ENV=development next dev applications/frontend",
    "start:dev:backend": "NODE_ENV=development ts-node-dev --ignore-watch node_modules --watch 'src/**/*.ts' --inspect=0.0.0.0:9269 -r dotenv/config applications/backend/server.ts dotenv_config_path=./config/.env.development",
    "start:frontend": "NODE_ENV=production next start applications/frontend",
    "start:backend": "NODE_ENV=production node -r dotenv/config dist/src/applications/fungus/backend/server dotenv_config_path=./config/.env.production",
    "test": "yarn run test:unit && yarn run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:unit:watch": "NODE_ENV=test jest --watch",
    "test:features": "NODE_ENV=test cucumber-js -p default -b",
    "build:frontend": "next build applications/frontend",
    "build:backend": "yarn run build:clean && yarn run build:tsc && yarn run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy src/applications/**/*.{json,yaml} dist/src/applications",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "@hapi/hapi": "^20.0.3",
    "@hapi/jwt": "^2.0.1",
    "axios": "^0.20.0",
    "copy": "^0.3.2",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "http-status": "^1.4.2",
    "leaflet": "^1.7.1",
    "leaflet-draw": "^1.0.4",
    "lodash": "^4.17.15",
    "next": "^9.5.3",
    "node-dependency-injection": "^2.6.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-leaflet": "^2.7.0",
    "react-leaflet-draw": "^0.19.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^1.2.1",
    "ts-node": "^8.9.1",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@types/cucumber": "^6.0.1",
    "@types/faker": "^4.1.11",
    "@types/glob": "^7.1.1",
    "@types/hapi__hapi": "^20.0.3",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^14.10.2",
    "@types/react": "^16.9.49",
    "@types/react-leaflet": "^2.5.2",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "cucumber": "^6.0.5",
    "cucumber-pretty": "^6.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "faker": "^4.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "tslib": "^1.11.1",
    "typescript": "^4.0.2"
  }
}
